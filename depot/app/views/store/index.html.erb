<h1>Pragmatic Catalog</h1>

<% @products.each do |product| -%>
  <div class="entry">
    <%= image_tag product.image %>
    <h3><%= product.title %></h3>
    <%= product.descr %>
    <div class="price-line">
      <span class="price"><%= number_to_currency product.price %></span>
      <%= button_to 'Add To Cart' %>
    </div>
  </div>
<% end %>
